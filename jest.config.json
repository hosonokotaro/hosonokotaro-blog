{
  "preset": "ts-jest",
  "moduleNameMapper": {
    "^~/(.+)": "<rootDir>/src/$1",
    "^@/(.+)": "<rootDir>/src/components/$1",
    ".+\\.(css|scss)$": "identity-obj-proxy"
  },
  "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"],
  "transform": {
    "^.+\\.[jt]sx?$": "babel-jest"
  }
}
