{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/components/*"],
    }
  },
  "include": ["./src", "./types/**/*.d.ts"]
}
