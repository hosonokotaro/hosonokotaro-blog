{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/edit{,/**}",
        "destination": "/edit/index.html"
      }, {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
